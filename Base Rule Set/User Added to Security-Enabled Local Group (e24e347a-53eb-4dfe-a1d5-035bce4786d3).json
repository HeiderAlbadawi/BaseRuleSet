                          "kind":  "Scheduled",
                          "apiVersion":  "2023-12-01-preview",
                          "properties":  {
                                             "displayName":  "User Added to Security-Enabled Local Group",
                                             "description":  ": This alert rule detects when a user account is added to a security-enabled local group within the environment. Adding users to security groups can impact access control and permissions, and monitoring such changes is crucial for maintaining security and compliance. This alert triggers on Event ID 4728, which indicates that a user has been added to a security-enabled local group. By receiving notifications of these changes, security teams can quickly review and verify the modifications to ensure they are legitimate and in line with organizational policies.",
                                             "severity":  "Medium",
                                             "enabled":  true,
                                             "query":  "SecurityEvent\n| where EventID==\"4732\"\n",
                                             "queryFrequency":  "PT5H",
                                             "queryPeriod":  "PT5H",
                                             "triggerOperator":  "GreaterThan",
                                             "triggerThreshold":  0,
                                             "suppressionDuration":  "PT5H",
                                             "suppressionEnabled":  false,
                                             "startTimeUtc":  null,
