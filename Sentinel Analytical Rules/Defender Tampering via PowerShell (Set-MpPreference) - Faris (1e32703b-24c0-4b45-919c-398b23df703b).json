{
    "contentVersion":  "1.0.0.0",
    "$schema":  "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "resources":  [
                      {
                          "id":  "[concat(resourceId(\u0027Microsoft.OperationalInsights/workspaces/providers\u0027, parameters(\u0027workspace\u0027), \u0027Microsoft.SecurityInsights\u0027),\u0027/alertRules/1e32703b-24c0-4b45-919c-398b23df703b\u0027)]",
                          "name":  "[concat(parameters(\u0027workspace\u0027),\u0027/Microsoft.SecurityInsights/1e32703b-24c0-4b45-919c-398b23df703b\u0027)]",
                          "type":  "Microsoft.OperationalInsights/workspaces/providers/alertRules",
                          "kind":  "Scheduled",
                          "apiVersion":  "2023-12-01-preview",
                          "properties":  {
                                             "displayName":  "Defender Tampering via PowerShell (Set-MpPreference) - Faris",
                                             "description":  "This rule detects suspicious PowerShell commands used to modify or disable Microsoft Defender protections using the Set-MpPreference cmdlet. Attackers often use these commands to evade detection by disabling real-time monitoring, behavior monitoring, IOAV protection, script scanning, or intrusion prevention features.",
                                             "severity":  "High",
                                             "enabled":  true,
                                             "query":  "DeviceEvents\r\n| where ActionType == \"PowerShellCommand\"\r\n| where InitiatingProcessFileName =~ \"powershell.exe\"\r\n| where AdditionalFields has \"Set-MpPreference\"\r\n| where AdditionalFields has_any (\"exclusionprocess\", \"DisableRealtimeMonitoring\", \r\n    \"DisableIOAVProtection\", \"DisableBehaviorMonitoring\", \r\n    \"DisableIntrusionPreventionSystem\", \"DisableScriptScanning\")",
                                             "queryFrequency":  "PT1H",
                                             "queryPeriod":  "PT1H",
                                             "triggerOperator":  "GreaterThan",
                                             "triggerThreshold":  0,
                                             "suppressionDuration":  "PT5H",
                                             "suppressionEnabled":  false,
                                             "startTimeUtc":  null,
                                             "tactics":  [
                                                             "DefenseEvasion"
                                                         ],
                                             "techniques":  [
                                                                "T1562"
                                                            ],
                                             "subTechniques":  [
                                                                   "T1562.001"
                                                               ],
                                             "alertRuleTemplateName":  null,
                                             "incidentConfiguration":  {
                                                                           "createIncident":  true,
                                                                           "groupingConfiguration":  {
                                                                                                         "enabled":  false,
                                                                                                         "reopenClosedIncident":  false,
                                                                                                         "lookbackDuration":  "PT5H",
                                                                                                         "matchingMethod":  "AllEntities",
                                                                                                         "groupByEntities":  [

                                                                                                                             ],
                                                                                                         "groupByAlertDetails":  [

                                                                                                                                 ],
                                                                                                         "groupByCustomDetails":  [

                                                                                                                                  ]
                                                                                                     }
                                                                       },
                                             "eventGroupingSettings":  {
                                                                           "aggregationKind":  "AlertPerResult"
                                                                       },
                                             "alertDetailsOverride":  null,
                                             "customDetails":  null,
                                             "entityMappings":  null,
                                             "sentinelEntitiesMappings":  null,
                                             "templateVersion":  null
                                         }
                      }
                  ],
    "parameters":  {
                       "workspace":  {
                                         "type":  "String"
                                     }
                   }
}