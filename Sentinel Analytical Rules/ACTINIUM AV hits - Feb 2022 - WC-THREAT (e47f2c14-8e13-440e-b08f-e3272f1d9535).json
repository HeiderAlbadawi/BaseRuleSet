                                                                        "entityType":  "Host",
                                                                        "fieldMappings":  [
                                                                                              {
                                                                                                  "identifier":  "FullName",
                                                                                                  "columnName":  "HostCustomEntity"
                                                                                              }
                                                                                          ]
                                                                    },
                                                                    {
                                                                        "entityType":  "FileHash",
                                                                        "fieldMappings":  [
                                                                                              {
                                                                                                  "identifier":  "Algorithm",
                                                                                                  "columnName":  "FileHashCustomEntity"
                                                                                              },
                                                                                              {
                                                                                                  "identifier":  "Value",
                                                                                                  "columnName":  "FileHashCustomEntity"
                                                                                              }
                                                                                          ]
                                                                    }
                                                                ],
                                             "sentinelEntitiesMappings":  null,
                                             "templateVersion":  "1.0.0"
                                         }
                      }
