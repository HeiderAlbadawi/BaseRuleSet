{
    "contentVersion": "1.0.0.0",
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "resources": [
        {
            "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/42b49386-21e9-429b-bcfc-8e40fe5d6b56')]",
            "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/42b49386-21e9-429b-bcfc-8e40fe5d6b56')]",
            "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
            "kind": "Scheduled",
            "apiVersion": "2023-12-01-preview",
            "properties": {
                "displayName": "Windows Scheduled Task Creation on Remote Host with at.exe - [WC-THREAT]",
                "description": "This search detects the execution of at.exe with command-line arguments utilized to to create a Scheduled Task on a remote host. Rule translated from Splunk Security Content.",
                "severity": "Low",
                "enabled": true,
                "query": "SecurityEvent |  where EventID == 1 | where (NewProcessName endswith 'at.exe' and CommandLine contains @'\\\\\\')",
                "queryFrequency": "PT15M",
                "queryPeriod": "PT15M",
                "triggerOperator": "GreaterThan",
                "triggerThreshold": 0,
                "suppressionDuration": "PT5H",
                "suppressionEnabled": false,
                "startTimeUtc": null,
                "tactics": [],
                "techniques": [],
                "subTechniques": [],
                "alertRuleTemplateName": null,
                "incidentConfiguration": {
                    "createIncident": true,
                    "groupingConfiguration": {
                        "enabled": true,
                        "reopenClosedIncident": false,
                        "lookbackDuration": "PT5H",
                        "matchingMethod": "AllEntities",
                        "groupByEntities": [],
                        "groupByAlertDetails": [],
                        "groupByCustomDetails": []
                    }
                },
                "eventGroupingSettings": {
                    "aggregationKind": "SingleAlert"
                },
                "alertDetailsOverride": null,
                "customDetails": null,
                "entityMappings": null,
                "sentinelEntitiesMappings": null,
                "templateVersion": null
            }
        }
    ],
    "parameters": {
        "workspace": {
            "type": "String"
        }
    }
}